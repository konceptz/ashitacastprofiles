<inputcommands>
        <cmd input="/Warp">
            <equip><lring>Warp Ring</lring></equip>
            <equip><rring>Dim. Ring (Dem)</rring></equip>
        </cmd>
		<cmd input="/DT">   <!-- Set a keybind to /DT to toggle easily -->
            <setvar name="hdt" value="Off"/>
            <setvar name="mdt" value="Off"/>
			<if advanced="$DT=Off">
                <setvar name="DT" value="On" />
                <addtochat color="8">DT Mode: [Enabled]</addtochat>
                <doidlegear />
            </if>
            <else>
                <setvar name="DT" value="Off" />
                <addtochat color="8">DT Mode: [Disabled]</addtochat>
                <doidlegear />
            </else>
        </cmd>
		<cmd input="/MDT">   <!-- Set a keybind to /DT to toggle easily -->
            <setvar name="dt" value="Off"/>
			<setvar name="hdt" value="Off"/>
			<if advanced="$mdt=Off">
                <setvar name="mdt" value="On" />
                <addtochat color="8">MDT Mode: [Enabled]</addtochat>
                <doidlegear />
            </if>
            <else>
                <setvar name="mdt" value="Off" />
                <addtochat color="8">MDT Mode: [Disabled]</addtochat>
                <doidlegear />
            </else>
        </cmd>
        <cmd input="/sword">   <!-- Set a keybind to /DT to toggle easily -->
            <setvar name="knife" value="Off"/>
            <if advanced="$sword=Off">
                <setvar name="sword" value="On" />
                <addtochat color="8">Sword Mode: [Enabled]</addtochat>
                <doidlegear />
            </if>
            <else>
                <setvar name="sword" value="Off" />
                <addtochat color="8">Sword Mode: [Disabled]</addtochat>
                <doidlegear />
            </else>
        </cmd>
        <cmd input="/knife">   <!-- Set a keybind to /DT to toggle easily -->
            <setvar name="sword" value="Off"/>
            <if advanced="$knife=Off">
                <setvar name="knife" value="On" />
                <addtochat color="8">Knife Mode: [Enabled]</addtochat>
                <doidlegear />
            </if>
            <else>
                <setvar name="knife" value="Off" />
                <addtochat color="8">Knife Mode: [Disabled]</addtochat>
                <doidlegear />
            </else>
        </cmd>

      
</inputcommands>
   
